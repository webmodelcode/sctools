{
  "manifest_version": 3,
  "name": "sctools",
  "version": "1.0.0",
  "action": {
    "default_popup": "index.html",
    "default_icon": "sctools-icon.png"
  },
  "permissions": ["tabs", "activeTab", "storage", "scripting"],
  "content_scripts": [
    {
      "matches": [
        "https://*.stripchat.com/*",
        "https://*.chaturbate.com/*",
        "https://performerclient.streamatemodels.com/*"
      ],
      "js": ["src/content.tsx"]
    }
  ]
}
