{
  "manifest_version": 3,
  "name": "sctools",
  "version": "0.1.0",
  "action": {
    "default_popup": "index.html",
    "default_icon": "sctools-icon.png"
  },
  "permissions": ["tabs", "activeTab", "storage", "scripting"],
  "content_scripts": [
    {
      "matches": ["https://es.stripchat.com/*"],
      "js": ["src/content.tsx"]
    }
  ]
}
